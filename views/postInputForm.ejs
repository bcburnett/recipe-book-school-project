<div class="form-group">
  <label for="text">Message Text</label>
  <textarea
    type="text"
    id="postText"
    class="form-control"
    placeholder="enter message text"
  ></textarea>
</div>
<div class="form-group">
  <label for="postLink">Message Link</label>
  <input
    type="text"
    id="postLink"
    class="form-control"
    placeholder="enter message Link"
  />
</div>
<div class="form-group">
  <label for="postTitle">Message Title</label>
  <input
    type="text"
    id="postTitle"
    class="form-control"
    placeholder="enter message Title"
  />
</div>
<img src="" alt="" id="postDisplay" style="max-width:300px;max-height:400px">
<div class="form-group">
  <label for="postImage">Message Image</label>
  <input
    type="file"
    accept=".png, .jpg, .bmp, .webp, .gif"
    id="postImage"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="postContent">Message Text</label>
  <div id="froala-editor" class="success"></div>
</div>

<button id="postSubmit">Submit</button>

<script src="tinymce.js"></script>
<script>
    tinymce.init({ selector: "#postContent" });
</script>
